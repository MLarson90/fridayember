{{#if addNewQuestion}}
<form>
   <div class="form-group">
     <label for="main">Enter your question</label>
     {{input value=main id="main"}}
   </div>

   <div class="form-group">
     <label for="name">Your Name</label>
     {{input value=name id="name"}}
   </div>

   <div class="form-group">
     <label for="note">Any addtional info</label>
     {{input value=note id="note"}}
   </div>
 <div class="form-group">
   <button {{action 'saveQuestion'}}>Save</button>
 </div>
</form>
{{else}}
<button {{action 'newQuestionFormShow'}}>Add New Question</button>
{{/if}}
