{{#if addNewAnswer}}
<form>
    <div class="form-group">
      <label for="answer">Enter your answer</label>
      {{input value=answer id="answer"}}
    </div>
    <div class="form-group">
      <label for="name">Enter your name</label>
      {{input value=name id="name"}}
    </div>
    <button class="btn btn-success" {{action 'saveAnswer' }}>Submit</button>
  </form>
  {{else}}
  <button class="btn btn-success" {{action 'showAnswerForm'}}>Add Answer</button>
{{/if}}
